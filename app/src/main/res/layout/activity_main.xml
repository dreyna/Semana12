<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Texto para guardar o reemplazar" />

        <EditText
            android:id="@+id/editTextOriginal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Texto original a reemplazar"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnLeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leer"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar línea"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar archivo"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido leído aparecerá aquí"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</ScrollView>
